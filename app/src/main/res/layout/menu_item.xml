<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="13dp">

    <ImageView
        android:id="@+id/menu_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/menu_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/menu_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 10.000"
            android:textSize="15sp"
            android:textColor="@android:color/holo_green_dark"/>

        <TextView
            android:id="@+id/menu_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a description of the food item. It can be several lines long, but should be kept relatively short so that it fits nicely in the layout."
            android:textSize="15sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</LinearLayout>
